<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @vite(['resources/css/error.css'])
    <title>404 - Halaman Tidak Ditemukan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/framer-motion@11.11.11/dist/framer-motion.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .card {
            background: white;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
        }

        .card-header {
            padding: 1.5rem;
            background: #eff6ff;
            border-bottom: 1px solid #e5e7eb;
            border-radius: 0.5rem 0.5rem 0 0;
        }

        .card-content {
            padding: 1.5rem;
        }

        .card-footer {
            padding: 1.5rem;
            background: #f9fafb;
            border-top: 1px solid #e5e7eb;
            border-radius: 0 0 0.5rem 0.5rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 0.375rem;
            transition: all 0.2s;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background: #2563eb;
            color: white;
        }

        .btn-primary:hover {
            background: #1d4ed8;
        }

        .btn-outline {
            background: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

        .btn-outline:hover {
            background: #f9fafb;
        }

        .alert {
            display: flex;
            gap: 0.75rem;
            padding: 1rem;
            background: #dbeafe;
            border: 1px solid #93c5fd;
            border-radius: 0.5rem;
            color: #1e3a8a;
        }

        /* Epic entrance perspective to enhance 3D transforms on entry */
        #app {
            perspective: 1400px;
            transform-style: preserve-3d;
        }
    </style>
</head>

<body class="bg-gray-50">
    <div id="app" class="min-h-screen w-full flex items-center justify-center p-4 relative overflow-hidden">
        <!-- Animated Background Circles -->
        <div id="circle1" class="absolute top-20 left-10 w-64 h-64 bg-blue-200 opacity-20 rounded-full blur-3xl"></div>
        <div id="circle2" class="absolute bottom-20 right-10 w-96 h-96 bg-purple-200 opacity-20 rounded-full blur-3xl">
        </div>

        <div class="container max-w-4xl relative z-10">
            <div class="grid md:grid-cols-2 gap-8 items-center">
                <!-- Left Side -->
                <div id="leftSide" class="text-center md:text-left">
                    <!-- Badge -->
                    <div id="badge"
                        class="inline-flex items-center gap-2 bg-orange-100 text-orange-800 px-3 py-1 rounded mb-6">
                        <svg id="searchIcon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                            <line x1="8" y1="11" x2="14" y2="11"></line>
                        </svg>
                        <span class="text-sm">Kesalahan 404</span>
                    </div>

                    <!-- Error Number -->
                    <div id="errorNumber" class="mb-6">
                        <h1 id="number404" class="text-blue-600 mb-4"
                            style="font-size: clamp(5rem, 12vw, 8rem); line-height: 1; font-weight: 700;">
                            404
                        </h1>
                        <h2 id="title" class="text-gray-800 text-3xl md:text-4xl font-semibold mb-4">
                            Halaman Tidak Ditemukan
                        </h2>
                        <p id="subtitle" class="text-gray-600 text-lg">
                            Maaf, halaman yang Anda cari tidak dapat ditemukan atau telah dipindahkan.
                        </p>
                    </div>

                    <!-- Alert -->
                    <div id="alertBox" class="alert mb-6">
                        <svg id="infoIcon" class="h-4 w-4 shrink-0 mt-0.5" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="16" x2="12" y2="12"></line>
                            <line x1="12" y1="8" x2="12.01" y2="8"></line>
                        </svg>
                        <div class="text-sm">
                            URL yang Anda masukkan mungkin salah ketik atau halaman telah dihapus. Silakan periksa
                            kembali URL atau kembali ke beranda.
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div id="buttons" class="flex flex-col sm:flex-row gap-3 justify-center md:justify-start">
                        <button class="btn btn-primary" onclick="window.location.href='/'">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                            Kembali ke Beranda
                        </button>
                        <a class="btn btn-outline" onclick="window.history.back()">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <line x1="19" y1="12" x2="5" y2="12"></line>
                                <polyline points="12 19 5 12 12 5"></polyline>
                            </svg>
                            Kembali
                        </a>
                    </div>
                </div>

                <!-- Right Side -->
                <div id="rightSide">
                    <div id="card" class="card shadow-lg">
                        <div class="card-header">
                            <h3 class="text-blue-900 text-xl font-semibold mb-1">Apa yang dapat saya lakukan?</h3>
                            <p class="text-gray-600 text-sm">Coba langkah-langkah berikut</p>
                        </div>
                        <div class="card-content">
                            <div class="space-y-4">
                                <div id="suggestion1"
                                    class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div
                                            class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            1
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Periksa URL</h4>
                                        <p class="text-gray-600 text-sm">Pastikan alamat yang Anda masukkan sudah benar
                                            dan tidak ada kesalahan ketik.</p>
                                    </div>
                                </div>

                                <div id="suggestion2"
                                    class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div
                                            class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            2
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Gunakan Navigasi</h4>
                                        <p class="text-gray-600 text-sm">Gunakan menu navigasi atau tombol kembali untuk
                                            menemukan halaman yang Anda cari.</p>
                                    </div>
                                </div>

                                <div id="suggestion3"
                                    class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div
                                            class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            3
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Halaman Utama</h4>
                                        <p class="text-gray-600 text-sm">Kembali ke halaman utama dan mulai dari awal
                                            untuk menemukan konten yang Anda inginkan.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <p class="text-sm text-gray-600">
                                <strong>Masih butuh bantuan?</strong> Hubungi kami di
                                <a href="mailto:support@example.com"
                                    class="text-blue-600 hover:underline">support@example.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Info -->
            <div id="bottomInfo" class="mt-12 text-center">
                <div
                    class="inline-flex items-center gap-2 text-sm text-gray-500 bg-white px-4 py-2 rounded-full border border-gray-200 shadow-sm">
                    <span>Kode Kesalahan:</span>
                    <code id="errorCode" class="bg-gray-100 px-2 py-0.5 rounded text-gray-700">404_NOT_FOUND</code>
                    <span>|</span>
                    <span>Respons Server</span>
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        const { motion, animate } = window.Motion;

        // Animate background circles
        animate('#circle1',
            { scale: [1, 1.2, 1], opacity: [0.2, 0.5, 0.2] },
            { duration: 5, repeat: Infinity, ease: "easeInOut" }
        );

        animate('#circle2',
            { scale: [1, 1.3, 1], opacity: [0.2, 0.4, 0.2] },
            { duration: 7, repeat: Infinity, ease: "easeInOut" }
        );

        // Animate search icon
        animate('#searchIcon',
            { rotate: [0, 360] },
            { duration: 3, repeat: Infinity, ease: "linear" }
        );

        // Animate 404 number with glow
        animate('#number404',
            {
                textShadow: [
                    '0 0 20px rgba(37, 99, 235, 0.3)',
                    '0 0 30px rgba(37, 99, 235, 0.5)',
                    '0 0 20px rgba(37, 99, 235, 0.3)',
                ]
            },
            { duration: 3, repeat: Infinity }
        );

        // Animate info icon
        animate('#infoIcon',
            { scale: [1, 1.1, 1] },
            { duration: 2, repeat: Infinity }
        );

        // Animate error code background
        animate('#errorCode',
            { backgroundColor: ['#f3f4f6', '#e5e7eb', '#f3f4f6'] },
            { duration: 3, repeat: Infinity }
        );

        // Initial animations
        animate('#leftSide',
            { opacity: [0, 1], x: [-30, 0] },
            { duration: 0.5 }
        );

        animate('#rightSide',
            { opacity: [0, 1], x: [30, 0] },
            { duration: 0.5, delay: 0.2 }
        );

        animate('#badge',
            { opacity: [0, 1], y: [-10, 0] },
            { duration: 0.4, delay: 0.1 }
        );

        animate('#errorNumber',
            { opacity: [0, 1], scale: [0.8, 1] },
            { duration: 0.5, delay: 0.2 }
        );

        animate('#alertBox',
            { opacity: [0, 1], y: [10, 0] },
            { duration: 0.4, delay: 0.4 }
        );

        animate('#buttons',
            { opacity: [0, 1], y: [10, 0] },
            { duration: 0.4, delay: 0.5 }
        );

        animate('#suggestion1',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.5 }
        );

        animate('#suggestion2',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.65 }
        );

        animate('#suggestion3',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.8 }
        );

        animate('#bottomInfo',
            { opacity: [0, 1], y: [20, 0] },
            { duration: 0.5, delay: 0.9 }
        );

        // Epic entry animation for the whole page
        animate('#app',
            {
                opacity: [0, 1],
                y: [80, -12, 0],
                scale: [0.96, 1.025, 1],
                rotateX: [8, -4, 0]
            },
            { duration: 0.9, ease: "easeOut" }
        );

        // Slight staggered pop for left and right columns to emphasize entrance
        animate('#leftSide', { opacity: [0, 1], x: [-30, 0], scale: [0.98, 1] }, { duration: 0.6, delay: 0.15, ease: "easeOut" });
        animate('#rightSide', { opacity: [0, 1], x: [30, 0], scale: [0.98, 1] }, { duration: 0.6, delay: 0.25, ease: "easeOut" });
    </script>
</body>

</html>