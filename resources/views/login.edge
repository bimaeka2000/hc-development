<body>
  <main class="login-card card shadow-sm p-4">
    <div class="text-center mb-3">
      <i class="bi bi-person-fill-lock text-primary" style="font-size: 3rem;"></i>
      <h4 class="mt-2 mb-0 text-primary" style="font-weight:650;">
        Sistem HC
      </h4>
      <div class="text-secondary small">
        Human Capital Management System
      </div>
    </div>

    <div id="loginAlert" class="alert alert-danger d-none" role="alert" aria-live="polite">
    </div>

    {{-- #TODO tambahkan atribut href dan aria-label yang sesuai --}}
    <form action="{{ route('login.manual') }}" method="POST" novalidate>
      {{ csrfField() }}
      <div class="mb-3">
        <label class="form-label">Nama Pengguna</label>
        <input id="loginUser" name="email" class="form-control" placeholder="Name Pengguna" required />
        <div id="hintUser" class="input-hint">
          <i class="bi bi-exclamation-octagon m-2"></i>Fill this field
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Kata Sandi</label>
        <input id="loginPass" name="password" type="password" class="form-control" placeholder="Kata Sandi" required />
        <div id="hintPass" class="input-hint">
          <i class="bi bi-exclamation-octagon m-2"></i>Fill this field
        </div>
        <div class="invalid-feedback">
          <i class="bi bi-exclamation-circle-fill text-danger me-1"></i>
        </div>
        <p style="text-align: right;font-size: smaller;" class="forgot-pass" id="forgotTrigger">
          Forgot Password?
        </p>
        <div class="d-grid mb-2">
          <button id="loginBtn" class="btn btn-primary" type="submit">Masuk</button>
        </div>
        <div>
          <div class="text-center text-secondary small m-3">
            atau masuk dengan
          </div>
        </div>
        <script src="https://accounts.google.com/gsi/client" async defer>

        </script>

        <!-- Tombol Sign In bawaan Google -->
        <a href="{{ route('google.redirect') }}" class="google-btn">
          <svg class="google-icon" viewBox="0 0 533.5 544.3" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M533.5 278.4c0-17.4-1.5-34.8-4.6-51.5H272.1v97.4h146.9c-6.3 33.7-25 62.3-53.2 81.4v67.6h85.9c50.3-46.4 81.8-114.6 81.8-194.9z"
              fill="#4285F4" />
            <path
              d="M272.1 544.3c72.9 0 134-24.1 178.7-65.5l-85.9-67.6c-23.9 16-54.4 25.4-92.8 25.4-71.2 0-131.6-48-153.2-112.6H31.5v70.7C76.2 494.7 167.6 544.3 272.1 544.3z"
              fill="#34A853" />
            <path d="M118.9 325.9c-10.2-30.9-10.2-64.5 0-95.4V159.8H31.5c-42.8 85.5-42.8 186.9 0 272.4l87.4-70.7z"
              fill="#FBBC05" />
            <path
              d="M272.1 108.7c39.5 0 75 13.6 103 40.5l77.3-77.3C405.6 24.5 344.6 0 272.1 0 167.6 0 76.2 49.6 31.5 129.8l87.4 70.7C140.5 156.7 200.9 108.7 272.1 108.7z"
              fill="#EA4335" />
          </svg>
          <span>Masuk dengan Google</span>
        </a>

      </div>
    </form>

    <hr />
    <div class="small text-muted text-center">
      &copy; 2025 Sistem HC &copy;
    </div>
  </main>

  <!-- Forgot Password Modal -->

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js">

  </script>

</body>

