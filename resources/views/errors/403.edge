<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/error.css">
    <title>403 - Akses Ditolak</title>
    @vite(['resources/css/error.css'])
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/framer-motion@11.11.11/dist/framer-motion.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .card {
            background: white;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
        }

        .card-header {
            padding: 1.5rem;
            background: #eff6ff;
            border-bottom: 1px solid #e5e7eb;
            border-radius: 0.5rem 0.5rem 0 0;
        }

        .card-content {
            padding: 1.5rem;
        }

        .card-footer {
            padding: 1.5rem;
            background: #f9fafb;
            border-top: 1px solid #e5e7eb;
            border-radius: 0 0 0.5rem 0.5rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 0.375rem;
            transition: all 0.2s;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background: #2563eb;
            color: white;
        }

        .btn-primary:hover {
            background: #1d4ed8;
        }

        .btn-outline {
            background: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

        .btn-outline:hover {
            background: #f9fafb;
        }

        .alert {
            display: flex;
            gap: 0.75rem;
            padding: 1rem;
            background: #fefce8;
            border: 1px solid #fde047;
            border-radius: 0.5rem;
            color: #854d0e;
        }

        /* Epic entrance perspective to enhance 3D transforms on entry */
        #app { perspective: 1400px; transform-style: preserve-3d; }
    </style>
</head>
<body class="bg-gray-50">
    <div id="app" class="min-h-screen w-full flex items-center justify-center p-4 relative overflow-hidden">
        <!-- Animated Background Circles -->
        <div id="circle1" class="absolute top-20 left-10 w-64 h-64 bg-blue-200 opacity-20 rounded-full blur-3xl"></div>
        <div id="circle2" class="absolute bottom-20 right-10 w-96 h-96 bg-red-200 opacity-20 rounded-full blur-3xl"></div>

        <div class="container max-w-4xl relative z-10">
            <div class="grid md:grid-cols-2 gap-8 items-center">
                <!-- Left Side -->
                <div id="leftSide" class="text-center md:text-left">
                    <!-- Badge -->
                    <div id="badge" class="inline-flex items-center gap-2 bg-red-100 text-red-800 px-3 py-1 rounded mb-6">
                        <svg id="lockIcon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                        <span class="text-sm">Kesalahan 403</span>
                    </div>

                    <!-- Error Number -->
                    <div id="errorNumber" class="mb-6">
                        <h1 id="number403" class="text-blue-600 mb-4" style="font-size: clamp(5rem, 12vw, 8rem); line-height: 1; font-weight: 700;">
                            403
                        </h1>
                        <h2 id="title" class="text-gray-800 text-3xl md:text-4xl font-semibold mb-4">
                            Akses Ditolak
                        </h2>
                        <p id="subtitle" class="text-gray-600 text-lg">
                            Maaf, Anda tidak memiliki izin untuk mengakses halaman ini.
                        </p>
                    </div>

                    <!-- Alert -->
                    <div id="alertBox" class="alert mb-6">
                        <svg id="shieldIcon" class="h-4 w-4 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                        </svg>
                        <div class="text-sm">
                            Sumber daya ini dibatasi. Silakan hubungi administrator Anda jika Anda yakin ini adalah kesalahan.
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div id="buttons" class="flex flex-col sm:flex-row gap-3 justify-center md:justify-start">
                        <button class="btn btn-primary" onclick="window.location.href='/'">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                            Kembali ke Beranda
                        </button>
                        <button class="btn btn-outline" onclick="window.history.back()">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <line x1="19" y1="12" x2="5" y2="12"></line>
                                <polyline points="12 19 5 12 12 5"></polyline>
                            </svg>
                            Kembali
                        </button>
                    </div>
                </div>

                <!-- Right Side -->
                <div id="rightSide">
                    <div id="card" class="card shadow-lg">
                        <div class="card-header">
                            <h3 class="text-blue-900 text-xl font-semibold mb-1">Mengapa saya melihat ini?</h3>
                            <p class="text-gray-600 text-sm">Alasan umum untuk kesalahan ini</p>
                        </div>
                        <div class="card-content">
                            <div class="space-y-4">
                                <div id="reason1" class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            1
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Izin Tidak Mencukupi</h4>
                                        <p class="text-gray-600 text-sm">Akun Anda tidak memiliki tingkat akses yang diperlukan.</p>
                                    </div>
                                </div>

                                <div id="reason2" class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            2
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Autentikasi Diperlukan</h4>
                                        <p class="text-gray-600 text-sm">Anda mungkin perlu masuk atau memverifikasi kredensial Anda.</p>
                                    </div>
                                </div>

                                <div id="reason3" class="flex gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
                                    <div class="shrink-0 mt-0.5">
                                        <div class="w-6 h-6 rounded-full bg-blue-100 text-blue-700 flex items-center justify-center text-sm font-medium">
                                            3
                                        </div>
                                    </div>
                                    <div>
                                        <h4 class="text-gray-900 font-medium mb-1">Konten Terbatas</h4>
                                        <p class="text-gray-600 text-sm">Konten ini hanya tersedia untuk pengguna atau grup tertentu.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <p class="text-sm text-gray-600">
                                <strong>Butuh bantuan?</strong> Hubungi dukungan di
                                <a href="mailto:support@example.com" class="text-blue-600 hover:underline">support@example.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Info -->
            <div id="bottomInfo" class="mt-12 text-center">
                <div class="inline-flex items-center gap-2 text-sm text-gray-500 bg-white px-4 py-2 rounded-full border border-gray-200 shadow-sm">
                    <span>Kode Kesalahan:</span>
                    <code id="errorCode" class="bg-gray-100 px-2 py-0.5 rounded text-gray-700">403_FORBIDDEN</code>
                    <span>|</span>
                    <span>Respons Server</span>
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        const { motion, animate } = window.Motion;

        // Animate background circles
        animate('#circle1',
            { scale: [1, 1.2, 1], opacity: [0.2, 0.5, 0.2] },
            { duration: 5, repeat: Infinity, ease: "easeInOut" }
        );

        animate('#circle2',
            { scale: [1, 1.3, 1], opacity: [0.2, 0.4, 0.2] },
            { duration: 7, repeat: Infinity, ease: "easeInOut" }
        );

        // Animate lock icon
        animate('#lockIcon',
            { rotate: [0, -10, 10, -10, 0] },
            { duration: 2, repeat: Infinity, repeatDelay: 1 }
        );

        // Animate 403 number with glow
        animate('#number403',
            {
                textShadow: [
                    '0 0 20px rgba(37, 99, 235, 0.3)',
                    '0 0 30px rgba(37, 99, 235, 0.5)',
                    '0 0 20px rgba(37, 99, 235, 0.3)',
                ]
            },
            { duration: 3, repeat: Infinity }
        );

        // Animate shield icon
        animate('#shieldIcon',
            { scale: [1, 1.1, 1] },
            { duration: 2, repeat: Infinity }
        );

        // Animate error code background
        animate('#errorCode',
            { backgroundColor: ['#f3f4f6', '#e5e7eb', '#f3f4f6'] },
            { duration: 3, repeat: Infinity }
        );

        // Initial animations
        animate('#leftSide',
            { opacity: [0, 1], x: [-30, 0] },
            { duration: 0.5 }
        );

        animate('#rightSide',
            { opacity: [0, 1], x: [30, 0] },
            { duration: 0.5, delay: 0.2 }
        );

        animate('#badge',
            { opacity: [0, 1], y: [-10, 0] },
            { duration: 0.4, delay: 0.1 }
        );

        animate('#errorNumber',
            { opacity: [0, 1], scale: [0.8, 1] },
            { duration: 0.5, delay: 0.2 }
        );

        animate('#alertBox',
            { opacity: [0, 1], y: [10, 0] },
            { duration: 0.4, delay: 0.4 }
        );

        animate('#buttons',
            { opacity: [0, 1], y: [10, 0] },
            { duration: 0.4, delay: 0.5 }
        );

        animate('#reason1',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.5 }
        );

        animate('#reason2',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.65 }
        );

        animate('#reason3',
            { opacity: [0, 1], x: [-20, 0] },
            { duration: 0.4, delay: 0.8 }
        );

        animate('#bottomInfo',
            { opacity: [0, 1], y: [20, 0] },
            { duration: 0.5, delay: 0.9 }
        );

        // Epic entry animation for the whole page
        // scales, lifts and gives a subtle 3D tilt before settling
        animate('#app',
            {
                opacity: [0, 1],
                y: [80, -12, 0],
                scale: [0.96, 1.025, 1],
                rotateX: [8, -4, 0]
            },
            { duration: 0.9, ease: "easeOut" }
        );

        // Slight staggered pop for left and right columns to emphasize entrance
        animate('#leftSide', { opacity: [0, 1], x: [-30, 0], scale: [0.98, 1] }, { duration: 0.6, delay: 0.15, ease: "easeOut" });
        animate('#rightSide', { opacity: [0, 1], x: [30, 0], scale: [0.98, 1] }, { duration: 0.6, delay: 0.25, ease: "easeOut" });
    </script>
</body>
</html>
